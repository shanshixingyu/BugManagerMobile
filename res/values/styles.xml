<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialogTheme2">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="login_input_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/login_et_shape</item>
    </style>

    <style name="RadiusGroupTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/radius_group_shape</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="RadiusGroupItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/setting_group_item_divider</item>
    </style>

    <style name="RadiusGroupItemBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RadiusGroupItemTop" parent="RadiusGroupItemBase">
        <item name="android:background">@drawable/radius_group_item_top_selector</item>
    </style>

    <style name="RadiusGroupItemMiddle" parent="RadiusGroupItemBase">
        <item name="android:background">@drawable/radius_group_item_middle_selector</item>
    </style>

    <style name="RadiusGroupItemBottom" parent="RadiusGroupItemBase">
        <item name="android:background">@drawable/radius_group_item_bottom_selector</item>
    </style>

    <style name="RadiusGroupItemSingle" parent="RadiusGroupItemBase">
        <item name="android:background">@drawable/radius_group_item_single_selector</item>
    </style>

    <style name="RadiusGroupItemTextBase">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RadiusGroupItemLeft" parent="RadiusGroupItemTextBase">
        <item name="android:layout_width">110dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="RadiusGroupItemRight" parent="RadiusGroupItemTextBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="SlideLeftMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">10dp</item>
        <!--<item name="android:layout_marginTop">2dp</item>-->
        <!--<item name="android:layout_marginBottom">2dp</item>-->
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_slide_left_menu_item</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_go</item>
        <item name="android:onClick">onLeftMenuClick</item>
    </style>

    <style name="SlideLeftMenuItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#383D41</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="TopOptTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/bg_top_opt</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TopOptBackTheme">
        <item name="android:clickable">true</item>
        <item name="android:onClick">onOptClick</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/opt_back_selector</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TopOptTitleTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="TopOptBtnTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/opt_btn_shape</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <!--<item name="android:paddingBottom">5dp</item>-->
        <!--<item name="android:paddingTop">5dp</item>-->
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:onClick">onOptClick</item>
    </style>

    <style name="SatelliteMenuItem">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:clickable">true</item>
    </style>

    <declare-styleable name="SatelliteMenu">
        <attr name="radius" format="dimension" />
        <attr name="distanceRight" format="dimension" />
        <attr name="distanceBottom" format="dimension" />
    </declare-styleable>

    <!--&lt;!&ndash;首页Bug概况中ListView的每一项的布局&ndash;&gt;-->
    <!--<style name="HomeBugOverviewItemCount">-->
    <!--<item name="android:layout_height">match_parent</item>-->
    <!--<item name="android:textSize">16dp</item>-->
    <!--<item name="android:textColor">#333333</item>-->
    <!--</style>-->

    <!--bug搜索界面-->
    <style name="SearchBugItemRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="SearchBugItemTitle">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SearchBugItemContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="BugListItemInfo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ff494949</item>
    </style>

    <!--bug详情页每一项的标题-->
    <style name="BugDetailItemTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <!--bug详情页每一项的标题-->
    <style name="BugDetailItemTitle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#ff494949</item>
        <!--<item name="android:paddingTop">5dp</item>-->
        <!--<item name="android:paddingBottom">5dp</item>-->
        <!--<item name="android:paddingLeft">5dp</item>-->
    </style>
    <!--bug详情页每一项的内容-->
    <style name="BugDetailItemContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <!--<item name="android:singleLine">true</item>-->
        <!--<item name="android:ellipsize">end</item>-->
        <item name="android:textColor">#ff575a57</item>
    </style>
    <!--bug详情页操作按钮的样式-->
    <style name="BugDetailOptItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <!--添加用户-->
    <style name="UserItemRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="UserItemTitle">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="UserItemContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ChartsTitleTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff232323</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ChartsContentTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

</resources>