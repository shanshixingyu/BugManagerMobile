<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="#ffcbcbcb" />
                    <stroke android:color="#ffc6c6c6" />
                </shape>
            </item>
            <item android:right="10dp" android:top="3dp" android:bottom="3dp">
                <bitmap android:src="@drawable/ic_drop_down" android:gravity="right|center_vertical" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="#ffe9e9e9" />
                    <stroke android:color="#ffc6c6c6" />
                </shape>
            </item>
            <item android:right="10dp" android:top="3dp" android:bottom="3dp">
                <bitmap android:src="@drawable/ic_drop_down" android:gravity="right|center_vertical" />
            </item>
        </layer-list>
    </item>
</selector>