<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/login_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="75dp"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="@string/login_title" />

    <EditText
        android:id="@+id/login_username_et"
        style="@style/login_input_et"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_login_username"
        android:hint="@string/login_username" />

    <EditText
        android:id="@+id/login_password_et"
        style="@style/login_input_et"
        android:drawableLeft="@drawable/ic_login_password"
        android:hint="@string/login_password"
        android:inputType="textPassword" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/login_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_remember"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/login_reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:text="@string/login_forget"
            android:textColor="@color/login_forget"
            android:onClick="onTvClick"
            android:textSize="16dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/login_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn"
        android:onClick="onBtnClick"
        android:padding="10dp"
        android:text="@string/login_btn"
        android:textColor="@android:color/white"
        android:textSize="20dp" />


</LinearLayout>

