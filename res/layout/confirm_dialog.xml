<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/confirm_dialog_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/confirm_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="80dp"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm_dialog_left_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/confirm_dialog_left_btn"
            android:text="@string/confirm_dialog_cancel_btn"
            android:textColor="@android:color/white"
            android:textSize="19dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ff2a2a2a" />

        <Button
            android:id="@+id/confirm_dialog_right_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/confirm_dialog_right_btn"
            android:text="@string/confirm_dialog_sure_btn"
            android:textColor="@android:color/white"
            android:textSize="19dp" />
    </LinearLayout>


</LinearLayout>