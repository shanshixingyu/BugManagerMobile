<?xml version="1.0" encoding="utf-8"?>
<com.gf.BugManagerMobile.view.SlideItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/slide_item_first"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:clickable="true"
            android:background="@drawable/list_item_selector"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/group_list_item_name_tv"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:textSize="21dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/group_list_item_introduce_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="15dp"
                android:textColor="#555555" />
        </LinearLayout>

        <TextView
            android:id="@+id/slide_item_second"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_item_delete"
            android:gravity="center"
            android:clickable="true"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="normal"
            android:text="@string/group_list_item_delete" />
    </LinearLayout>
</com.gf.BugManagerMobile.view.SlideItemView>