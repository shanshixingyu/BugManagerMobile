<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bug_solve_dialog_root_lyt"
    android:orientation="vertical"
    android:background="@drawable/bg_bug_opt"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:paddingTop="15dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="35dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="#000000"
            android:text="@string/bug_solve_type" />

        <RadioGroup
            android:id="@+id/bug_solve_type_rg"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:checkedButton="@+id/bug_solve_solve_rbtn"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@id/bug_solve_solve_rbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="@string/bug_solve_solve" />

            <RadioButton
                android:id="@+id/bug_solve_other_rbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="@string/bug_solve_other" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:text="@string/bug_solve_reason" />

    <EditText
        android:id="@+id/bug_solve_introduce_et"
        android:layout_width="match_parent"
        android:lines="5"
        android:gravity="top|left"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bug_solve_cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/bg_bug_opt_btn"
            android:text="@string/bug_solve_cancel" />

        <Button
            android:id="@+id/bug_solve_sure_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/bg_bug_opt_btn"
            android:text="@string/bug_solve_sure" />
    </LinearLayout>

</LinearLayout>