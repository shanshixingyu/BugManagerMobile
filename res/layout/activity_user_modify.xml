<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/TopOptTheme">

        <ImageView
            android:id="@+id/modify_user_back_imgv"
            style="@style/TopOptBackTheme" />

        <TextView
            android:text="@string/modify_user_title"
            style="@style/TopOptTitleTheme" />

        <Button
            android:id="@+id/modify_user_modify_btn"
            android:text="@string/modify_user_opt"
            style="@style/TopOptBtnTheme" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/UserItemRow"
        android:orientation="horizontal">

        <TextView
            android:text="@string/user_name"
            style="@style/UserItemTitle" />

        <EditText
            android:id="@+id/modify_user_name_et"
            style="@style/UserItemContent" />
    </LinearLayout>

    <LinearLayout
        style="@style/UserItemRow"
        android:orientation="horizontal">

        <TextView
            android:text="@string/user_role"
            style="@style/UserItemTitle" />

        <Spinner
            android:id="@+id/modify_user_role_sp"
            android:entries="@array/UserRole"
            style="@style/UserItemContent" />
    </LinearLayout>

    <LinearLayout
        style="@style/UserItemRow"
        android:orientation="horizontal">

        <TextView
            android:text="@string/user_email"
            style="@style/UserItemTitle" />

        <EditText
            android:id="@+id/modify_user_email_et"
            android:inputType="textEmailAddress"
            style="@style/UserItemContent" />
    </LinearLayout>

    <LinearLayout
        style="@style/UserItemRow"
        android:orientation="horizontal">

        <TextView
            android:text="@string/user_creator"
            style="@style/UserItemTitle" />

        <TextView
            android:id="@+id/modify_user_creator_tv"
            style="@style/UserItemContent" />
    </LinearLayout>

    <LinearLayout
        style="@style/UserItemRow"
        android:orientation="horizontal">

        <TextView
            android:text="@string/user_create_time"
            style="@style/UserItemTitle" />

        <TextView
            android:id="@+id/modify_user_create_time_tv"
            style="@style/UserItemContent" />
    </LinearLayout>


</LinearLayout>