<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bug_active_dialog_root_lyt"
    android:orientation="vertical"
    android:background="@drawable/bg_bug_opt"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:paddingTop="15dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:text="@string/bug_active_reason" />

    <EditText
        android:id="@+id/bug_active_reason_et"
        android:layout_width="match_parent"
        android:lines="5"
        android:gravity="top|left"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bug_active_cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:onClick="onBtnClick"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/bg_bug_opt_btn"
            android:text="@string/bug_active_cancel" />

        <Button
            android:id="@+id/bug_active_sure_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:onClick="onBtnClick"
            android:layout_marginLeft="5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/bg_bug_opt_btn"
            android:text="@string/bug_active_sure" />
    </LinearLayout>

</LinearLayout>