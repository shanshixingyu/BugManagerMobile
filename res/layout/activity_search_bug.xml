<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/TopOptTheme">

        <ImageView
            android:id="@+id/search_bug_back_imgv"
            style="@style/TopOptBackTheme" />

        <TextView
            style="@style/TopOptTitleTheme"
            android:text="@string/search_bug_title" />

        <Button
            android:id="@+id/search_bug_btn"
            android:text="@string/search_bug_btn"
            style="@style/TopOptBtnTheme" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/OptItemRow">

        <TextView
            android:text="@string/search_bug_project"
            style="@style/OptItemTitle" />

        <TextView
            android:id="@+id/search_bug_project_name_tv"
            style="@style/OptItemContent2" />
    </LinearLayout>

    <LinearLayout style="@style/OptItemRow">

        <TextView
            android:text="@string/search_bug_module"
            style="@style/OptItemTitle" />

        <Spinner
            android:id="@+id/search_bug_module_sp"
            android:background="@drawable/bg_spinner_selector"
            style="@style/OptItemContent" />
    </LinearLayout>

    <LinearLayout style="@style/OptItemRow">

        <TextView
            android:text="@string/search_bug_priority"
            style="@style/OptItemTitle" />

        <Spinner
            android:id="@+id/search_bug_priority_sp"
            android:entries="@array/BugPriority"
            android:background="@drawable/bg_spinner_selector"
            style="@style/OptItemContent" />
    </LinearLayout>

    <LinearLayout style="@style/OptItemRow">

        <TextView
            android:text="@string/search_bug_serious"
            style="@style/OptItemTitle" />

        <Spinner
            android:id="@+id/search_bug_serious_sp"
            android:entries="@array/BugSerious"
            android:background="@drawable/bg_spinner_selector"
            style="@style/OptItemContent" />
    </LinearLayout>

    <LinearLayout style="@style/OptItemRow">

        <TextView
            android:text="@string/search_bug_assign"
            style="@style/OptItemTitle" />

        <Spinner
            android:id="@+id/search_bug_assign_sp"
            android:background="@drawable/bg_spinner_selector"
            style="@style/OptItemContent" />
    </LinearLayout>

    <LinearLayout style="@style/OptItemRow">

        <TextView
            style="@style/OptItemTitle"
            android:text="@string/search_bug_submit" />

        <EditText
            android:id="@+id/search_bug_submit_et"
            android:background="@drawable/bg_edit_text_selector"
            style="@style/OptItemContent2" />
    </LinearLayout>

    <LinearLayout style="@style/OptItemRow">

        <TextView
            style="@style/OptItemTitle"
            android:text="@string/search_bug_status" />

        <Spinner
            android:id="@+id/search_bug_status_sp"
            android:entries="@array/BugStatus"
            android:background="@drawable/bg_spinner_selector"
            style="@style/OptItemContent" />
    </LinearLayout>

    <LinearLayout style="@style/OptItemRow">

        <TextView
            android:text="@string/search_bug_key_word"
            style="@style/OptItemTitle" />

        <EditText
            android:id="@+id/search_bug_key_word_et"
            android:background="@drawable/bg_edit_text_selector"
            style="@style/OptItemContent2" />
    </LinearLayout>
</LinearLayout>