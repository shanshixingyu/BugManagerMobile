<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bug_list_item_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="#ff0a0a0a"
            android:textSize="21dp"
            tools:text="山东三农的烦恼山东份内"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bug_list_item_status_tv"
            android:layout_width="wrap_content"
            tools:text="未解决"
            android:textSize="16dp"
            android:padding="5dp"
            android:textColor="#ff494949"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="优先级:"
            style="@style/BugListItemInfo" />

        <TextView
            android:id="@+id/bug_list_item_priority_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="低"
            style="@style/BugListItemInfo" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:text="程度:"-->
        <!--style="@style/BugListItemInfo" />-->

        <TextView
            android:id="@+id/bug_list_item_serious_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            tools:text="非常严重"
            style="@style/BugListItemInfo" />

        <TextView
            android:id="@+id/bug_list_item_submit_time_tv"
            android:layout_width="0dp"
            android:layout_weight="5"
            tools:text="2015-05-03 22:15:06"
            android:gravity="right"
            style="@style/BugListItemInfo" />
    </LinearLayout>
</LinearLayout>