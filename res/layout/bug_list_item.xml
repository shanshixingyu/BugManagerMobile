<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bug_list_item_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="#ff0a0a0a"
            android:textSize="20dp"
            tools:text="山东三农的烦恼山东份内"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bug_list_item_priority_tv"
            android:layout_width="wrap_content"
            tools:text="低"
            android:textSize="16dp"
            android:padding="5dp"
            android:textColor="#ff494949"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bug_list_item_status_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            tools:text="未解决"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="#ff494949"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bug_list_item_serious_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            tools:text="非常严重"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="#ff494949"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bug_list_item_submit_tv"
            android:layout_width="0dp"
            android:layout_weight="5"
            tools:text="2015-05-03 22:15:06"
            android:gravity="right"
            android:textSize="16dp"
            android:padding="5dp"
            android:textColor="#ff494949"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>