<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout style="@style/TopOptTheme">

        <ImageView
            android:id="@+id/add_user_back_imgv"
            style="@style/TopOptBackTheme" />

        <TextView
            android:text="@string/add_user_title"
            style="@style/TopOptTitleTheme" />

        <Button
            android:id="@+id/add_user_save_btn"
            android:text="@string/add_user_save"
            style="@style/TopOptBtnTheme" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/OptItemRow"
        android:orientation="horizontal">

        <TextView
            android:text="@string/user_name"
            style="@style/OptItemTitle" />

        <EditText
            android:id="@+id/add_user_name_et"
            android:background="@drawable/bg_edit_text_selector"
            style="@style/OptItemContent" />
    </LinearLayout>

    <LinearLayout
        style="@style/OptItemRow"
        android:orientation="horizontal">

        <TextView
            android:text="@string/user_role"
            style="@style/OptItemTitle" />

        <Spinner
            android:id="@+id/add_user_role_sp"
            android:entries="@array/UserRole"
            android:background="@drawable/bg_spinner_selector"
            style="@style/OptItemContent" />
    </LinearLayout>

    <LinearLayout
        style="@style/OptItemRow"
        android:orientation="horizontal">

        <TextView
            android:text="@string/user_email"
            style="@style/OptItemTitle" />

        <EditText
            android:id="@+id/add_user_email_et"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_edit_text_selector"
            style="@style/OptItemContent" />
    </LinearLayout>


</LinearLayout>