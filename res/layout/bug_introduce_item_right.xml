<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clickable="false"
    android:padding="5dp"
    android:minWidth="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bug_introduce_item_title"
        android:layout_width="match_parent"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="12dp"
        tools:text="2015-05-01 12:41:30 新建 by root"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bug_introduce_item_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:padding="10dp"
        android:background="@drawable/bug_initroduce_item_right_selector"
        android:layout_gravity="right"
        tools:text="哦是的弄佛山弄顺南"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>